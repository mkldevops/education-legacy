{% extends '_inspina/layout.html.twig' %}

{% trans_default_domain "common" %}

{% block title %}
    {{ title }} - {{ parent() }}
{% endblock %}

{% set breadcrumbs = { ('package.breadcrumb'|trans) : path('app_package_index')}|merge(breadcrumbs|default({})) %}

{% block menu_action %}

    <li class="{%if 'package' == app.request.attributes.get('_route')%} active{% endif %}">
        <a href="{{ path('app_package_index') }}">
            <span class="fa fa-list"></span>
            {% trans %}List{% endtrans %}
        </a>
    </li>
    <li class="{%if 'app_package_new' == app.request.attributes.get('_route')%} active{% endif %}">
        <a href="{{ path('app_package_new') }}">
            <span class="fa fa-plus"></span>
            {% trans %}package.new{% endtrans %}
        </a>
    </li>

    {% if package is defined and package.id %}
        <li class="{%if 'app_package_show' == app.request.attributes.get('_route')%} active{% endif %}">
            <a href="{{ path('app_package_show', {'id': package.id}) }}">
                <span class="fa fa-file"></span>
                {% trans %}Show{% endtrans %}
            </a>
        </li>
        <li class="{%if 'app_package_edit' == app.request.attributes.get('_route')%} active{% endif %}">
            <a href="{{ path('app_package_edit', {'id': package.id}) }}">
                <span class="fa fa-edit"></span>
                {% trans %}Edit{% endtrans %}
            </a>
        </li>
        <li class=" {%if 'app_package_delete' == app.request.attributes.get('_route')%} active{% endif %}">
            <a href="{{ path('app_package_delete', {'id': package.id}) }}">
                <span class="fa fa-trash"></span>
                {% trans %}Delete{% endtrans %}
            </a>
        </li>
    {% endif %}
{% endblock %}
