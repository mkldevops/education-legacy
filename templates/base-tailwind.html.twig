{% set version = constant('Symfony\\Component\\HttpKernel\\Kernel::MAJOR_VERSION') ~ '.' ~ constant('Symfony\\Component\\HttpKernel\\Kernel::MINOR_VERSION') %}

<!DOCTYPE html>
<html lang="{{ app.request.locale }}" class="h-full bg-gray-50">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="robots" content="noindex, nofollow">
        <link rel="shortcut icon" href="{{ asset('img/logo-custom.png') }}" type="image/x-icon" />
        
        <title>{% block title %}Education Management System{% endblock %}</title>

        {# PWA (injected by Spomky-Labs/PWA Bundle) #}
        {{ pwa() }}

        {% block metas %}{% endblock %}

        {% block stylesheets %}
            {# Tailwind CSS via CDN (for production, use build pipeline) #}
            <script>
                tailwind.config = {
                    theme: {
                        extend: {
                            colors: {
                                primary: {
                                    50: '#eff6ff',
                                    100: '#dbeafe', 
                                    200: '#bfdbfe',
                                    300: '#93c5fd',
                                    400: '#60a5fa',
                                    500: '#3b82f6',
                                    600: '#2563eb',
                                    700: '#1d4ed8',
                                    800: '#1e40af',
                                    900: '#1e3a8a',
                                },
                                success: {
                                    50: '#ecfdf5',
                                    100: '#d1fae5',
                                    200: '#a7f3d0',
                                    300: '#6ee7b7',
                                    400: '#34d399',
                                    500: '#10b981',
                                    600: '#059669',
                                    700: '#047857',
                                    800: '#065f46',
                                    900: '#064e3b',
                                },
                                warning: {
                                    50: '#fffbeb',
                                    100: '#fef3c7',
                                    200: '#fde68a',
                                    300: '#fcd34d',
                                    400: '#fbbf24',
                                    500: '#f59e0b',
                                    600: '#d97706',
                                    700: '#b45309',
                                    800: '#92400e',
                                    900: '#78350f',
                                },
                                danger: {
                                    50: '#fef2f2',
                                    100: '#fee2e2',
                                    200: '#fecaca',
                                    300: '#fca5a5',
                                    400: '#f87171',
                                    500: '#ef4444',
                                    600: '#dc2626',
                                    700: '#b91c1c',
                                    800: '#991b1b',
                                    900: '#7f1d1d',
                                }
                            },
                            fontFamily: {
                                'sans': ['Inter', 'system-ui', 'sans-serif'],
                            }
                        }
                    }
                }
            </script>
            <script src="https://cdn.tailwindcss.com?plugins=forms,typography,aspect-ratio"></script>
            
            {# Inter Font for better typography #}
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
            
            {# Heroicons for consistent iconography #}
            <script src="https://unpkg.com/@heroicons/react@2.0.18/24/outline/index.js" type="module"></script>
            
            {# Custom styles for specific resources #}
            {% if resources.datatables %}
                <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.4/css/dataTables.tailwindcss.min.css" />
            {% endif %}

            {% if resources.uploadfile %}
                <style>
                    .upload-area {
                        @apply border-2 border-dashed border-gray-300 rounded-lg p-6 text-center hover:border-primary-400 transition-colors;
                    }
                </style>
            {% endif %}

            {% if resources.operations %}
                <style>
                    .operation-valid { @apply bg-success-50 border-success-200 text-success-800; }
                    .operation-invalid { @apply bg-danger-50 border-danger-200 text-danger-800; }
                    .operation-pending { @apply bg-warning-50 border-warning-200 text-warning-800; }
                </style>
            {% endif %}

            <style>
                /* Custom scrollbar */
                ::-webkit-scrollbar { width: 6px; }
                ::-webkit-scrollbar-track { @apply bg-gray-100; }
                ::-webkit-scrollbar-thumb { @apply bg-gray-400 rounded-full; }
                ::-webkit-scrollbar-thumb:hover { @apply bg-gray-500; }
                
                /* Loading states */
                .loading { @apply animate-pulse; }
                
                /* Focus states */
                .focus-ring { @apply focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2; }
            </style>
        {% endblock %}

        {% block optionals %}{% endblock %}
    </head>

    <body class="h-full font-sans antialiased bg-gray-50">
        <div id="app" class="min-h-full">
            {% block container %}
                <!-- Mobile menu backdrop -->
                <div id="mobile-menu-backdrop" class="fixed inset-0 bg-gray-600 bg-opacity-75 z-40 hidden lg:hidden" onclick="toggleMobileMenu()"></div>

                <!-- Mobile menu -->
                <div id="mobile-menu" class="fixed inset-y-0 left-0 z-50 w-64 bg-white shadow-xl transform -translate-x-full transition-transform duration-300 lg:hidden">
                    {% block mobile_sidebar %}
                        {% include '_tailwind/mobile-sidebar.html.twig' %}
                    {% endblock %}
                </div>

                <!-- Desktop sidebar -->
                <div class="hidden lg:fixed lg:inset-y-0 lg:left-0 lg:z-50 lg:block lg:w-64 lg:overflow-y-auto lg:bg-white lg:shadow-lg">
                    {% block desktop_sidebar %}
                        {% include '_tailwind/sidebar.html.twig' %}
                    {% endblock %}
                </div>

                <!-- Main content area -->
                <div class="lg:pl-64">
                    <!-- Top navigation bar -->
                    <div class="sticky top-0 z-40 bg-white shadow-sm border-b border-gray-200">
                        {% block header %}
                            {% include '_tailwind/header.html.twig' %}
                        {% endblock %}
                    </div>

                    <!-- Page header -->
                    {% block page_header %}
                        {% if breadcrumbs is defined or title is defined %}
                            <div class="bg-white shadow-sm border-b border-gray-200">
                                <div class="px-4 py-4 sm:px-6 lg:px-8">
                                    {% if breadcrumbs is defined %}
                                        <nav class="flex mb-2" aria-label="Breadcrumb">
                                            <ol class="flex items-center space-x-2">
                                                {% for name, path_name in breadcrumbs %}
                                                    <li class="flex items-center">
                                                        {% if not loop.first %}
                                                            <svg class="w-4 h-4 text-gray-400 mx-2" fill="currentColor" viewBox="0 0 20 20">
                                                                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 111.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                                                            </svg>
                                                        {% endif %}
                                                        <a href="{{ path_name }}" class="text-sm font-medium {{ app.request.attributes.get('_route') == path_name ? 'text-primary-600' : 'text-gray-500 hover:text-gray-700' }}">
                                                            {{ name|capitalize }}
                                                        </a>
                                                    </li>
                                                {% endfor %}
                                            </ol>
                                        </nav>
                                    {% endif %}
                                    
                                    {% if title is defined %}
                                        <h1 class="text-2xl font-semibold text-gray-900">{{ title }}</h1>
                                    {% endif %}
                                </div>
                            </div>
                        {% endif %}
                    {% endblock %}

                    <!-- Flash messages -->
                    <div class="px-4 py-2 sm:px-6 lg:px-8">
                        {% include "_tailwind/flashbag.html.twig" %}
                    </div>

                    <!-- Main content -->
                    <main class="px-4 py-6 sm:px-6 lg:px-8">
                        {% block body %}
                            <div class="text-center py-16">
                                <div class="mx-auto max-w-md">
                                    <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                                    </svg>
                                    <h3 class="mt-4 text-lg font-medium text-gray-900">Contenu par défaut</h3>
                                    <p class="mt-2 text-sm text-gray-500">Cette page n'a pas de contenu spécifique défini.</p>
                                    <div class="mt-6">
                                        <a href="{{ path('app_admin_home') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors">
                                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                                            </svg>
                                            Tableau de bord
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endblock %}
                    </main>

                    <!-- Footer -->
                    {% block footer %}
                        <footer class="bg-white border-t border-gray-200 mt-8">
                            <div class="px-4 py-4 sm:px-6 lg:px-8">
                                <p class="text-sm text-gray-500 text-center">
                                    © {{ "now"|date("Y") }} Education Management System. 
                                    Powered by Symfony {{ version }} & Tailwind CSS.
                                </p>
                            </div>
                        </footer>
                    {% endblock %}
                </div>
            {% endblock %}
        </div>

        {% block javascripts %}
            {# Core dependencies #}
            <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
            <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>

            {# Sentry for error tracking #}
            <script src="https://js.sentry-cdn.com/f1037c7551f541a3a3b9cdd1a2200ba5.min.js" crossorigin="anonymous"></script>

            {# Modern JavaScript utilities #}
            <script src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js" defer></script>

            {# DateTime handling #}
            <script src="https://cdn.jsdelivr.net/npm/dayjs@1.11.7/dayjs.min.js"></script>

            {# DataTables for Tailwind #}
            {% if resources.datatables %}
                <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
                <script src="https://cdn.datatables.net/1.13.4/js/dataTables.tailwindcss.min.js"></script>
                <script>
                    // Configure DataTables defaults for Tailwind
                    $.extend(true, $.fn.dataTable.defaults, {
                        dom: '<"flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4"<"flex-1"f><"mt-2 sm:mt-0"l>><"overflow-x-auto"t><"flex flex-col sm:flex-row sm:items-center sm:justify-between mt-4"<"flex-1 text-sm text-gray-700"i><"mt-2 sm:mt-0"p>>',
                        language: {
                            search: "",
                            searchPlaceholder: "Rechercher...",
                            lengthMenu: "_MENU_ par page",
                            info: "Affichage de _START_ à _END_ sur _TOTAL_ entrées",
                            infoEmpty: "Aucune entrée",
                            infoFiltered: "(filtré de _MAX_ entrées totales)",
                            paginate: {
                                first: "Premier",
                                last: "Dernier", 
                                next: "Suivant",
                                previous: "Précédent"
                            }
                        }
                    });
                </script>
            {% endif %}

            {# File upload handling #}
            {% if resources.uploadfile %}
                <script src="https://unpkg.com/filepond@^4/dist/filepond.js"></script>
                <script src="{{ asset('js/document.js') }}"></script>
            {% endif %}

            {# Rich text editor #}
            {% if resources.ckeditor %}
                <script src="https://cdn.ckeditor.com/4.21.0/standard/ckeditor.js"></script>
                <script src="{{ asset('js/ckeditor.js') }}"></script>
            {% endif %}

            {# Custom application scripts #}
            <script src="{{ asset('js/base/base-bundle.js') }}"></script>
            <script src="{{ asset('js/base/base-config.js') }}"></script>
            <script src="{{ asset('js/base/base-functions.js') }}"></script>

            {% if resources.operations %}
                <script src="{{ asset('js/operation.js') }}"></script>
            {% endif %}

            {# Mobile menu toggle #}
            <script>
                function toggleMobileMenu() {
                    const menu = document.getElementById('mobile-menu');
                    const backdrop = document.getElementById('mobile-menu-backdrop');
                    
                    if (menu.classList.contains('-translate-x-full')) {
                        menu.classList.remove('-translate-x-full');
                        backdrop.classList.remove('hidden');
                        document.body.style.overflow = 'hidden';
                    } else {
                        menu.classList.add('-translate-x-full');
                        backdrop.classList.add('hidden');
                        document.body.style.overflow = '';
                    }
                }

                // Close mobile menu on window resize
                window.addEventListener('resize', function() {
                    if (window.innerWidth >= 1024) {
                        document.getElementById('mobile-menu').classList.add('-translate-x-full');
                        document.getElementById('mobile-menu-backdrop').classList.add('hidden');
                        document.body.style.overflow = '';
                    }
                });

                // Initialize tooltips and other UI components
                document.addEventListener('DOMContentLoaded', function() {
                    // Auto-hide flash messages
                    const flashMessages = document.querySelectorAll('[data-auto-hide]');
                    flashMessages.forEach(function(message) {
                        setTimeout(function() {
                            message.style.transition = 'opacity 0.5s';
                            message.style.opacity = '0';
                            setTimeout(function() {
                                message.remove();
                            }, 500);
                        }, 5000);
                    });
                });
            </script>
        {% endblock %}

        {% block importmap %}{{ importmap('app') }}{% endblock %}

        {# PWA Service Worker Registration #}
        <script type="module">
            import { Workbox } from 'workbox-window';

            if ('serviceWorker' in navigator) {
                const wb = new Workbox('/sw.js');
                wb.register();
            }
        </script>
    </body>
</html>