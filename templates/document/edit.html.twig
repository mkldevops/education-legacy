{% extends 'document/common.html.twig' %}

{% trans_default_domain 'document' %}

{% set title = 'title.edit'|trans({'%name%' : document}) %}

{% set breadcrumbs = { ('' ~ title) : path('app_document_edit', {id : document.id })}|merge(breadcrumbs|default({})) %}

{% block errors %}{{ form_errors(edit_form) }}{% endblock errors %}

{% block body %}
    
    {% embed '_inspina/embed/ibox.html.twig' %}
        {% trans_default_domain "document" %}
        {% block title 'title.form.edit'|trans %}
        {% block config '' %}
        {% block content %}
            {% include "form.html.twig" %}
        {% endblock %}
    {% endembed %}
{% endblock %}
