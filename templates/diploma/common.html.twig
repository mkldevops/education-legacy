{% set resources = resources|merge({ ckeditor : true, multiselect : true }) %}

{% extends '_inspina/layout.html.twig' %}

{% trans_default_domain 'common' %}

{% block title %}
    {{ title }} - {{ parent() }}
{% endblock %}

{% set breadcrumbs = { ('diploma.breadcrumb'|trans) : path('app_diploma_index')}|merge(breadcrumbs|default({})) %}

{% block menu_action %}
    <li class="{%if 'diploma' == app.request.attributes.get('_route')%} active{% endif %}">
        <a href="{{ path('app_diploma_index') }}">
            <span class="fa fa-list"></span>
            {% trans %}List{% endtrans %}
        </a>
    </li>
    <li class="{%if 'app_diploma_new' == app.request.attributes.get('_route')%} active{% endif %}">
        <a href="{{ path('app_diploma_new') }}">
            <span class="fa fa-plus"></span>
            {% trans %}diploma.new{% endtrans %}
        </a>
    </li>

    {% if diploma is defined and diploma.id %}
        <li class=" {%if 'app_diploma_show' == app.request.attributes.get('_route')%} active{% endif %}">
            <a href="{{ path('app_diploma_show', {'id': diploma.id}) }}">
                {% trans %}Show{% endtrans %}
            </a>
        </li>
        <li class=" {%if 'app_diploma_edit' == app.request.attributes.get('_route')%} active{% endif %}">
            <a href="{{ path('app_diploma_edit', {'id': diploma.id}) }}">
                <span class="fa fa-edit"></span>
                {% trans %}Edit{% endtrans %}
            </a>
        </li>
        <li class=" {%if 'app_diploma_delete' == app.request.attributes.get('_route')%} active{% endif %}">
            <a href="{{ path('app_diploma_delete', {'id': diploma.id}) }}">
                <span class="fa fa-trash"></span>
                {% trans %}Delete{% endtrans %}
            </a>
        </li>
    {% endif %}
{% endblock %}
