{% extends 'base.html.twig' %}

{% block title %}Diploma{% endblock %}

{% block body %}
    <h1>Diploma</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ diploma.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ diploma.name }}</td>
            </tr>
            <tr>
                <th>Enable</th>
                <td>{{ diploma.enable ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ diploma.createdAt ? diploma.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ diploma.updatedAt ? diploma.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DeletedAt</th>
                <td>{{ diploma.deletedAt ? diploma.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image.name</th>
                <td>{{ diploma.image.name }}</td>
            </tr>
            <tr>
                <th>Image.originalName</th>
                <td>{{ diploma.image.originalName }}</td>
            </tr>
            <tr>
                <th>Image.mimeType</th>
                <td>{{ diploma.image.mimeType }}</td>
            </tr>
            <tr>
                <th>Image.size</th>
                <td>{{ diploma.image.size }}</td>
            </tr>
            <tr>
                <th>Image.dimensions</th>
                <td>{{ diploma.image.dimensions }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('diploma_index') }}">back to list</a>

    <a href="{{ path('diploma_edit', {'id': diploma.id}) }}">edit</a>

    {{ include('diploma/_delete_form.html.twig') }}
{% endblock %}
