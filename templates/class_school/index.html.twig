{% extends "class_school/common.html.twig" %}

{% trans_default_domain 'class_school' %}

{% set title = 'title.index'|trans %}

{% block body %}


    <!-- Search Section -->
    <div class="mb-6">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <form action="{{ path('app_class_school_search') }}" method="GET" class="flex flex-col sm:flex-row gap-4">
                <div class="flex-1">
                    <label for="search" class="sr-only">Rechercher</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            {{ ux_icon('tabler:search', {class: 'w-4 h-4 text-gray-400'}) }}
                        </div>
                        <input type="text"
                               name="search"
                               id="search"
                               class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-1 focus:ring-primary-500 focus:border-primary-500 text-sm"
                               placeholder="Rechercher une classe..."
                               value="{{ search|default('') }}">
                    </div>
                </div>
                <button type="submit"
                        class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors duration-200">
                    {{ ux_icon('tabler:search', {class: 'w-4 h-4 mr-2'}) }}
                    Rechercher
                </button>
            </form>
        </div>
    </div>

    <!-- Classes Table -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900">
                Liste des classes
                {% if class_schools is defined %}
                    <span class="ml-2 text-sm font-normal text-gray-500">({{ class_schools|length }} classe{{ class_schools|length > 1 ? 's' : '' }})</span>
                {% endif %}
            </h3>
        </div>

        {% if class_schools is defined and class_schools|length > 0 %}
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-300">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                {{ 'show.head.id'|trans }}
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                {{ 'show.head.name'|trans }}
                            </th>
                            <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                                {{ 'show.head.enable'|trans }}
                            </th>
                            <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                                {{ 'show.head.period'|trans }}
                            </th>
                            <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                                {{ 'show.head.created_at'|trans }}
                            </th>
                            <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        {% for class_school in class_schools %}
                            <tr class="hover:bg-gray-50 {{ class_school.enable ? '' : 'opacity-60' }}">
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                    {{ class_school.id }}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="flex-shrink-0 h-8 w-8">
                                            <div class="h-8 w-8 rounded-full bg-primary-100 flex items-center justify-center">
                                                {{ ux_icon('tabler:school', {class: 'w-4 h-4 text-primary-600'}) }}
                                            </div>
                                        </div>
                                        <div class="ml-3">
                                            <div class="text-sm font-medium text-gray-900">
                                                <a href="{{ path('app_class_school_show', {'id': class_school.id}) }}"
                                                   class="hover:text-primary-600 transition-colors duration-200">
                                                    {{ class_school.name }}
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-center">
                                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full {{ class_school.enable ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' }}">
                                        {{ class_school.enable ? 'Actif' : 'Inactif' }}
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-900">
                                    {% if class_school.enable %}
                                        {% set class_period = class_school.current(period) %}
                                        {% if class_period is not empty %}
                                            <a href="{{ path('app_class_period_show', {'id': class_period.id}) }}"
                                               class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 hover:bg-blue-200 transition-colors duration-200">
                                                {{ class_period }}
                                            </a>
                                        {% elseif is_granted('ROLE_DIRECTOR') %}
                                            <a href="{{ path('app_class_period_add', {'classSchool': class_school.id, 'period': period.id}) }}"
                                               class="inline-flex items-center px-3 py-1 border border-transparent text-xs font-medium rounded text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors duration-200">
                                                {{ ux_icon('tabler:plus', {class: 'w-3 h-3 mr-1'}) }}
                                                Nouvelle classe {{ period }}
                                            </a>
                                        {% else %}
                                            <span class="text-gray-400 text-xs">classe à ajouter pour {{ period }}</span>
                                        {% endif %}
                                    {% else %}
                                        <span class="text-gray-400">---</span>
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-900">
                                    <span data-toggle="tooltip" title="{{ class_school.author }}">
                                        {{ class_school.createdAt.format('d/m/Y') }}
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                                    <div class="flex items-center justify-center space-x-2">
                                        <a href="{{ path('app_class_school_show', {'id': class_school.id}) }}"
                                           class="text-primary-600 hover:text-primary-900 transition-colors duration-200"
                                           title="Voir">
                                            {{ ux_icon('tabler:eye', {class: 'w-4 h-4'}) }}
                                        </a>
                                        <a href="{{ path('app_class_school_edit', {'id': class_school.id}) }}"
                                           class="text-blue-600 hover:text-blue-900 transition-colors duration-200"
                                           title="Modifier">
                                            {{ ux_icon('tabler:edit', {class: 'w-4 h-4'}) }}
                                        </a>
                                        {% if is_granted('ROLE_SUPER_ADMIN') %}
                                            <a href="{{ path('app_class_school_delete', {'id': class_school.id}) }}"
                                               class="text-red-600 hover:text-red-900 transition-colors duration-200"
                                               title="Supprimer">
                                                {{ ux_icon('tabler:trash', {class: 'w-4 h-4'}) }}
                                            </a>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="p-12 text-center">
                <div class="flex flex-col items-center">
                    <div class="bg-gray-100 rounded-full p-4 mb-4">
                        {{ ux_icon('tabler:school', {class: 'w-8 h-8 text-gray-400'}) }}
                    </div>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">Aucune classe trouvée</h3>
                    <p class="text-gray-500 mb-6">Commencez par créer votre première classe.</p>
                    <a href="{{ path('app_class_school_new') }}"
                       class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors duration-200">
                        {{ ux_icon('tabler:plus', {class: 'w-4 h-4 mr-2'}) }}
                        Créer une classe
                    </a>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
