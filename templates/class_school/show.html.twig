{% extends 'class_school/common.html.twig' %}

{% trans_default_domain 'class_school' %}

{% set title = 'title.show'|trans({'%name%' : classschool}) %}

{% set breadcrumbs = { ('' ~ title) : path('app_class_school_show', {id : classschool.id })}|merge(breadcrumbs|default({})) %}

{% block body %}

    <!-- Class Information -->
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-6 mb-6">
        <!-- Main Information -->
        <div class="lg:col-span-3">
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                    <div class="flex items-center">
                        <div class="bg-blue-100 rounded-full p-2 mr-3">
                            {{ ux_icon('tabler:info-circle', {class: 'w-5 h-5 text-blue-600'}) }}
                        </div>
                        <h2 class="text-lg font-medium text-gray-900">{{ 'title.header.info'|trans({'%name%' : classschool}) }}</h2>
                    </div>
                </div>
                <div class="p-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-4">
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Tranche d'âge</dt>
                                <dd class="mt-1 text-sm text-gray-900">
                                    de {{ classschool.ageMinimum }} à {{ classschool.ageMaximum }} ans
                                </dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Description</dt>
                                <dd class="mt-1 text-sm text-gray-900">
                                    {% if classschool.description %}
                                        {{ classschool.description }}
                                    {% else %}
                                        <span class="text-gray-400">Aucune description</span>
                                    {% endif %}
                                </dd>
                            </div>
                        </div>
                        <div class="space-y-4">
                            <div>
                                <dt class="text-sm font-medium text-gray-500">État</dt>
                                <dd class="mt-1">
                                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full {{ classschool.enable ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' }}">
                                        {{ classschool.enable ? 'Actif' : 'Désactivé' }}
                                    </span>
                                </dd>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div>
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                    <div class="flex items-center">
                        <div class="bg-gray-100 rounded-full p-2 mr-3">
                            {{ ux_icon('tabler:user', {class: 'w-5 h-5 text-gray-600'}) }}
                        </div>
                        <h2 class="text-lg font-medium text-gray-900">{{ 'title.header.status'|trans({'%name%' : classschool}) }}</h2>
                    </div>
                </div>
                <div class="px-6 py-4">
                    <div class="space-y-4">
                        <div>
                            <dt class="text-sm font-medium text-gray-500">{{ 'Author'|trans }}</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{ classschool.author.nameComplete }}</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">{{ 'Created'|trans }}</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{ classschool.createdAt.format('d/m/Y à H:i') }}</dd>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Class Periods - Full Width -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                    <div class="flex items-center">
                        <div class="bg-indigo-100 rounded-full p-2 mr-3">
                            {{ ux_icon('tabler:calendar', {class: 'w-5 h-5 text-indigo-600'}) }}
                        </div>
                        <h2 class="text-lg font-medium text-gray-900">{{ 'title.header.classperiod'|trans({'%name%' : classschool}) }}</h2>
                    </div>
                </div>

                {% if periods is defined and periods|length > 0 %}
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-300">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        {{ 'Period'|trans }}
                                    </th>
                                    <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        {{ 'Count Student'|trans }}
                                    </th>
                                    <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        {{ 'Count Course'|trans }}
                                    </th>
                                    <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        {{ 'Status'|trans }}
                                    </th>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        {{ 'Record'|trans }}
                                    </th>
                                    <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Actions
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                {% for period in periods %}
                                    <tr class="hover:bg-gray-50">
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="flex items-center">
                                                <div class="flex-shrink-0 h-8 w-8">
                                                    <div class="h-8 w-8 rounded-full bg-indigo-100 flex items-center justify-center">
                                                        {{ ux_icon('tabler:calendar-event', {class: 'w-4 h-4 text-indigo-600'}) }}
                                                    </div>
                                                </div>
                                                <div class="ml-3">
                                                    <div class="text-sm font-medium text-gray-900">{{ period.name }}</div>
                                                    <div class="text-sm text-gray-500">
                                                        {{ 'show.begin'|trans({ '%begin%' : period.begin.format('d/m/Y'), '%end%' : period.end.format('d/m/Y')}) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </td>

                                        {% if classschool.getClassPeriods[period.id] is defined %}
                                            {% set classPeriod = classschool.getClassPeriods[period.id] %}
                                            <td class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-900">
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                                    {{ ux_icon('tabler:users', {class: 'w-3 h-3 mr-1'}) }}
                                                    {{ classPeriod.students|length }}
                                                </span>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-900">
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                                                    {{ ux_icon('tabler:book', {class: 'w-3 h-3 mr-1'}) }}
                                                    {{ classPeriod.courses|length }}
                                                </span>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-center">
                                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full {{ classPeriod.enable ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' }}">
                                                    {{ classPeriod.enable ? 'Actif' : 'Désactivé' }}
                                                </span>
                                            </td>
                                            <td class="px-6 py-4 text-sm text-gray-900">
                                                <div class="flex flex-col">
                                                    <span class="font-medium">{{ classPeriod.record.format('d/m/y à H:i') }}</span>
                                                    <span class="text-gray-500">par {{ classPeriod.author.name }} {{ classPeriod.author.surname }}</span>
                                                </div>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                                                <a href="{{ path('app_class_period_show', {'id' : classPeriod.id }) }}"
                                                   class="inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors duration-200">
                                                    {{ ux_icon('tabler:eye', {class: 'w-3 h-3 mr-1'}) }}
                                                    Voir la classe
                                                </a>
                                            </td>
                                        {% else %}
                                            <td colspan="4" class="px-6 py-4 text-center">
                                                {% if is_granted('ROLE_SUPER_ADMIN') %}
                                                    <a href="{{ path('app_class_period_add', {'classSchool' : classschool.id, 'period' : period.id }) }}"
                                                       class="inline-flex items-center px-3 py-1.5 border border-gray-300 rounded text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors duration-200">
                                                        {{ ux_icon('tabler:plus', {class: 'w-3 h-3 mr-1'}) }}
                                                        {% trans with { '%period%' : period.name } %}class_period.add{% endtrans %}
                                                    </a>
                                                {% else %}
                                                    <span class="text-gray-500 text-sm">{% trans %}Request a superadmin to add this class{% endtrans %}</span>
                                                {% endif %}
                                            </td>
                                        {% endif %}
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="p-12 text-center">
                        <div class="flex flex-col items-center">
                            <div class="bg-gray-100 rounded-full p-4 mb-4">
                                {{ ux_icon('tabler:calendar', {class: 'w-8 h-8 text-gray-400'}) }}
                            </div>
                            <h3 class="text-lg font-medium text-gray-900 mb-2">Aucune période trouvée</h3>
                            <p class="text-gray-500">Les périodes scolaires apparaîtront ici.</p>
                        </div>
                    </div>
                {% endif %}
            </div>
    </div>
{% endblock %}
