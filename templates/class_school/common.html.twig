{% extends '_tailwind/layout.html.twig' %}

{% trans_default_domain "class_school" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/class-school.css') }}" />
{% endblock %}

{% block title %}
    {{ title|default('') }} - {{ parent() }}
{% endblock %}

{% set breadcrumbs = { ('classschool.breadcrumb'|trans) : path('app_class_school_index')}|merge(breadcrumbs|default({})) %}

{% block menu_action %}
    <nav class="flex space-x-1 bg-white rounded-lg shadow-sm p-1" aria-label="Navigation">
        <a href="{{ path('app_class_school_index') }}"
           class="flex items-center px-4 py-2 text-sm font-medium rounded-md transition-colors duration-200 {% if 'app_class_school_index' == app.request.attributes.get('_route') %}bg-blue-100 text-blue-700{% else %}text-gray-600 hover:text-gray-900 hover:bg-gray-100{% endif %}">
            {{ ux_icon('tabler:list', {class: 'w-4 h-4 mr-2'}) }}
            <span class="hidden sm:inline">{% trans %}List{% endtrans %}</span>
        </a>

        <a href="{{ path('app_class_school_new') }}"
           class="flex items-center px-4 py-2 text-sm font-medium rounded-md transition-colors duration-200 {% if 'app_class_school_new' == app.request.attributes.get('_route') %}bg-blue-100 text-blue-700{% else %}text-gray-600 hover:text-gray-900 hover:bg-gray-100{% endif %}">
            {{ ux_icon('tabler:plus', {class: 'w-4 h-4 mr-2'}) }}
            <span class="hidden sm:inline">{% trans %}classschool.new{% endtrans %}</span>
        </a>

        {% if classschool is defined and classschool.id %}
            <div class="flex items-center px-2">
                <div class="w-px h-6 bg-gray-300"></div>
            </div>

            <div class="relative" x-data="{ open: false }">
                <button @click="open = !open"
                        class="flex items-center px-4 py-2 text-sm font-medium rounded-md transition-colors duration-200 text-gray-600 hover:text-gray-900 hover:bg-gray-100">
                    {{ ux_icon('tabler:dots-vertical', {class: 'w-4 h-4 mr-2'}) }}
                    <span class="hidden sm:inline">Actions</span>
                    <svg class="w-4 h-4 ml-1 transition-transform duration-200" :class="{'rotate-180': open}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                </button>

                <div x-show="open"
                     x-transition:enter="transition ease-out duration-100"
                     x-transition:enter-start="transform opacity-0 scale-95"
                     x-transition:enter-end="transform opacity-100 scale-100"
                     x-transition:leave="transition ease-in duration-75"
                     x-transition:leave-start="transform opacity-100 scale-100"
                     x-transition:leave-end="transform opacity-0 scale-95"
                     @click.away="open = false"
                     class="absolute right-0 z-50 mt-2 w-48 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none">
                    <div class="py-1">
                        <a href="{{ path('app_class_school_show', {'id': classschool.id}) }}"
                           class="flex items-center px-4 py-2 text-sm transition-colors duration-200 {% if 'app_class_school_show' == app.request.attributes.get('_route') %}bg-blue-50 text-blue-700{% else %}text-gray-700 hover:bg-gray-100{% endif %}">
                            {{ ux_icon('tabler:eye', {class: 'w-4 h-4 mr-2'}) }}
                            {% trans %}Show{% endtrans %}
                        </a>

                        <a href="{{ path('app_class_school_edit', {'id': classschool.id}) }}"
                           class="flex items-center px-4 py-2 text-sm transition-colors duration-200 {% if 'app_class_school_edit' == app.request.attributes.get('_route') %}bg-blue-50 text-blue-700{% else %}text-gray-700 hover:bg-gray-100{% endif %}">
                            {{ ux_icon('tabler:edit', {class: 'w-4 h-4 mr-2'}) }}
                            {% trans %}Edit{% endtrans %}
                        </a>

                        {% if is_granted('ROLE_SUPER_ADMIN') %}
                            <hr class="my-1">

                            <a href="{{ path('app_class_school_delete', {'id': classschool.id}) }}"
                               class="flex items-center px-4 py-2 text-sm transition-colors duration-200 {% if 'app_class_school_delete' == app.request.attributes.get('_route') %}bg-red-50 text-red-700{% else %}text-gray-700 hover:bg-red-50 hover:text-red-700{% endif %}">
                                {{ ux_icon('tabler:trash', {class: 'w-4 h-4 mr-2'}) }}
                                {% trans %}Delete{% endtrans %}
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endif %}
    </nav>
{% endblock %}