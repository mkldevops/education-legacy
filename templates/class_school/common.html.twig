{% extends '_inspina/layout.html.twig' %}

{% trans_default_domain "common" %}

{% block title %}
    {{ title|default('') }} - {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/class-school.css') }}" />
{% endblock %}

{% set breadcrumbs = { ('classschool.breadcrumb'|trans) : path('app_class_school_index')}|merge(breadcrumbs|default({})) %}

{% block menu_action %}
    <li class="{%if 'classschool' == app.request.attributes.get('_route')%} active{% endif %}">
        <a href="{{ path('app_class_school_index') }}">
            <span class="fa fa-list"></span>
            {% trans %}List{% endtrans %}
        </a>
    </li>
    <li class="{%if 'classschool_new' == app.request.attributes.get('_route')%} active{% endif %}">
        <a href="{{ path('app_class_school_new') }}">
            <span class="fa fa-plus"></span>
            {% trans %}classschool.new{% endtrans %}
        </a>
    </li>
    
    {% if classschool is defined and classschool.id is not empty %}
        <li class="{%if 'classschool_show' == app.request.attributes.get('_route')%} active{% endif %}">
            <a href="{{ path('app_class_school_show', {'id': classschool.id}) }}">
                <span class="fa fa-file"></span>
                {% trans %}Show{% endtrans %}
            </a>
        </li>
        <li class="{%if 'classschool_edit' == app.request.attributes.get('_route')%} active{% endif %}">
            <a href="{{ path('app_class_school_edit', {'id': classschool.id}) }}">
                <span class="fa fa-edit"></span>
                {% trans %}Edit{% endtrans %}
            </a>
        </li>
        <li class="{%if 'classschool_delete' == app.request.attributes.get('_route')%} active{% endif %}">
            <a href="{{ path('app_class_school_delete', {'id': classschool.id}) }}">
                <span class="fa fa-trash"></span>
                {% trans %}Delete{% endtrans %}
            </a>
        </li>
    {% endif %}

{% endblock %}
