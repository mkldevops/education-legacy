{% trans_default_domain 'student' %}

<div {{ attributes }} id="class-period-modal" class="fixed inset-0 z-50 overflow-y-auto hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
        <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity modal-backdrop" aria-hidden="true"></div>
        <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>

        <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
            <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                <div class="flex items-start">
                    <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left w-full">
                        <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
                            {{ 'modal.classperiod.change'|trans }}
                        </h3>
                        <div class="mt-4">
                            {% if this.hasClassPeriods() %}
                                <select id="classperiod-change"
                                        name="classperiod-change"
                                        class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-md">
                                    <option value="">{{ 'modal.classperiod.choose'|trans }}</option>
                                    {% for classPeriod in this.getClassPeriods() %}
                                        <option value="{{ classPeriod.id }}" class="class-period-{{ classPeriod.id }}">
                                            {{ 'modal.classperiod.option'|trans({
                                                '%classname%': classPeriod.classSchool.name,
                                                '%length%': classPeriod.students|length
                                            }) }}
                                        </option>
                                    {% endfor %}
                                </select>
                            {% else %}
                                <p class="text-sm text-gray-500">{{ 'list.modal.nothing_class'|trans }}</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                {% if this.hasClassPeriods() %}
                    <button type="button"
                            id="save-classperiod"
                            class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-blue-600 text-base font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 sm:ml-3 sm:w-auto sm:text-sm disabled:opacity-50 disabled:cursor-not-allowed"
                            disabled>
                        {{ 'modal.save'|trans|default('Enregistrer') }}
                    </button>
                {% endif %}
                <button type="button"
                        class="modal-close mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
                    {{ 'modal.close'|trans }}
                </button>
            </div>
        </div>
    </div>
</div>
