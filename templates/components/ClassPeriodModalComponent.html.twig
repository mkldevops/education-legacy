{% trans_default_domain 'student' %}

<div {{ attributes }} id="class-period-modal-component">
    <!-- Hidden trigger button for JavaScript -->
    <button type="button" 
            id="hidden-open-button"
            style="display: none;"
            data-action="live#action" 
            data-live-action-param="openForStudent">
    </button>
    <!-- Modal -->
    <div {% if isOpen %}style="display: block;"{% else %}style="display: none;"{% endif %}
         class="fixed inset-0 z-50 overflow-y-auto {{ isOpen ? '' : 'hidden' }}" 
         aria-labelledby="modal-title" 
         role="dialog" 
         aria-modal="true">
         
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <!-- Background overlay -->
            <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" 
                 data-action="live#action" 
                 data-live-action-param="close"></div>
            
            <span class="hidden sm:inline-block sm:align-middle sm:h-screen">&#8203;</span>
            
            <!-- Modal content -->
            <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
                <!-- Header -->
                <div class="px-6 py-4 border-b border-gray-200">
                    <div class="flex items-center justify-between">
                        <h3 class="text-lg font-medium text-gray-900" id="modal-title">
                            {{ 'modal.classperiod.change'|trans }}
                        </h3>
                        <button type="button" 
                                data-action="live#action" 
                                data-live-action-param="close"
                                class="text-gray-400 hover:text-gray-600 focus:outline-none focus:text-gray-600 transition ease-in-out duration-150">
                            {{ ux_icon('tabler:x', {class: 'w-6 h-6'}) }}
                        </button>
                    </div>
                </div>
                
                <!-- Body -->
                <div class="px-6 py-4">
                    <!-- Success Message -->
                    {% if successMessage %}
                    <div class="mb-4 bg-green-50 border border-green-200 text-green-600 px-4 py-3 rounded-lg">
                        {{ successMessage }}
                    </div>
                    {% endif %}
                    
                    <!-- Error Message -->
                    {% if errorMessage %}
                    <div class="mb-4 bg-red-50 border border-red-200 text-red-600 px-4 py-3 rounded-lg">
                        {{ errorMessage }}
                    </div>
                    {% endif %}
                    
                    {% if this.hasClassPeriods() %}
                        <!-- Class Selection -->
                        <div class="mb-4">
                            <label for="classperiod-select" class="block text-sm font-medium text-gray-700 mb-2">
                                {{ 'modal.classperiod.choose'|trans }}
                            </label>
                            <select id="classperiod-select" 
                                    data-model="live#selectedClassPeriodId"
                                    class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm">
                                <option value="">{{ 'modal.classperiod.choose'|trans }}</option>
                                {% for classPeriod in this.getAvailableClassPeriods() %}
                                    <option value="{{ classPeriod.id }}" 
                                            {{ selectedClassPeriodId == classPeriod.id ? 'selected' : '' }}>
                                        {{ classPeriod.name }} ({{ classPeriod.studentCount }} élèves)
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                    {% else %}
                        <div class="mb-4 text-sm text-gray-500">
                            <p>{{ 'list.modal.nothing_class'|trans }}</p>
                        </div>
                    {% endif %}
                </div>
                
                <!-- Footer -->
                <div class="bg-gray-50 px-6 py-3 flex justify-end space-x-3">
                    <button type="button" 
                            data-action="live#action" 
                            data-live-action-param="close"
                            {{ isSubmitting ? 'disabled' : '' }}
                            class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed">
                        {{ ux_icon('tabler:x', {class: 'w-4 h-4 mr-2'}) }}
                        {{ 'modal.close'|trans }}
                    </button>
                    
                    {% if this.hasClassPeriods() %}
                        {% if this.changeClassUrl %}
                            <!-- Redirect to existing route -->
                            <a href="{{ this.changeClassUrl }}"
                               class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 {{ (not selectedClassPeriodId or isSubmitting) ? 'opacity-50 cursor-not-allowed' : '' }}">
                                {% if isSubmitting %}
                                    <div class="w-4 h-4 mr-2">
                                        <div class="animate-spin rounded-full h-4 w-4 border-b-2 border-white"></div>
                                    </div>
                                {% else %}
                                    {{ ux_icon('tabler:check', {class: 'w-4 h-4 mr-2'}) }}
                                {% endif %}
                                {{ isSubmitting ? 'Enregistrement...' : ('modal.save'|trans|default('Enregistrer')) }}
                            </a>
                        {% else %}
                            <!-- Use LiveComponent action -->
                            <button type="button" 
                                    data-action="live#action" 
                                    data-live-action-param="changeClass"
                                    {{ (not selectedClassPeriodId or isSubmitting) ? 'disabled' : '' }}
                                    class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed">
                                {% if isSubmitting %}
                                    <div class="w-4 h-4 mr-2">
                                        <div class="animate-spin rounded-full h-4 w-4 border-b-2 border-white"></div>
                                    </div>
                                {% else %}
                                    {{ ux_icon('tabler:check', {class: 'w-4 h-4 mr-2'}) }}
                                {% endif %}
                                {{ isSubmitting ? 'Enregistrement...' : ('modal.save'|trans|default('Enregistrer')) }}
                            </button>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>