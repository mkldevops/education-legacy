{% trans_default_domain 'layout' %}

<div class="flex h-full flex-col overflow-y-auto bg-gradient-to-b from-gray-50 to-white shadow-xl border-r border-gray-200">
    <!-- Enhanced Mobile Header -->
    <div class="flex items-center justify-between h-20 px-6 bg-gradient-to-br from-primary-600 via-primary-700 to-primary-800 shadow-lg relative">
        <div class="absolute inset-0 bg-black/5"></div>
        <div class="flex items-center space-x-3 relative z-10">
            <div class="p-2 bg-white/20 backdrop-blur-sm rounded-xl shadow-lg ring-1 ring-white/30">
                <img class="h-6 w-6" src="{{ asset('img/logo-custom.png') }}" alt="Logo">
            </div>
            <div>
                <span class="text-lg font-bold text-white tracking-tight">EduManage</span>
                <div class="text-xs text-primary-200 font-medium">Gestion Éducative</div>
            </div>
        </div>
        <button type="button" 
                onclick="toggleMobileMenu()" 
                class="relative z-10 p-2 bg-white/10 rounded-xl text-white hover:bg-white/20 focus:outline-none focus:ring-2 focus:ring-white/50 transition-all duration-200">
            <span class="sr-only">Fermer le menu</span>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
    </div>

    <!-- Enhanced Mobile User Profile Section -->
    {% if app.user %}
        <div class="mx-4 my-6 p-4 bg-gradient-to-r from-gray-50 to-gray-100 rounded-2xl border border-gray-200 shadow-sm">
            <div class="flex items-center">
                <div class="relative">
                    {% if app.user.image is defined and app.user.image %}
                        <img class="h-12 w-12 rounded-full object-cover ring-2 ring-primary-300 shadow-md" src="{{ asset(app.user.image) }}" alt="{{ app.user.name }}">
                    {% else %}
                        <div class="h-12 w-12 rounded-full bg-gradient-to-br from-primary-500 to-primary-600 flex items-center justify-center ring-2 ring-primary-300 shadow-md">
                            <span class="text-sm font-bold text-white">{{ app.user.name|first|upper }}</span>
                        </div>
                    {% endif %}
                    <!-- Mobile Online Status Indicator -->
                    <div class="absolute -bottom-1 -right-1 h-4 w-4 bg-green-400 rounded-full border-2 border-white shadow-sm"></div>
                </div>
                <div class="ml-4 min-w-0 flex-1">
                    <p class="text-sm font-bold text-gray-900 truncate">{{ app.user.name }}</p>
                    <p class="text-xs text-gray-600 truncate flex items-center">
                        <svg class="w-3 h-3 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
                        </svg>
                        {{ app.user.email }}
                    </p>
                </div>
            </div>
        </div>
    {% endif %}

    <!-- Mobile Navigation (same as desktop but with click handlers to close menu) -->
    <nav class="flex-1 px-4 py-4 space-y-1">
        <!-- Dashboard -->
        <a href="{{ path('app_admin_home') }}" 
           onclick="toggleMobileMenu()"
           class="group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors {{ app.request.attributes.get('_route') == 'app_admin_home' ? 'bg-primary-100 text-primary-700' : 'text-gray-700 hover:bg-gray-50 hover:text-gray-900' }}">
            <svg class="mr-3 h-5 w-5 {{ app.request.attributes.get('_route') == 'app_admin_home' ? 'text-primary-500' : 'text-gray-400 group-hover:text-gray-500' }}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            {{ 'breadcrumb.dashboard'|trans }}
        </a>

        <!-- Education Section -->
        <div class="mt-6">
            <h3 class="px-3 text-xs font-semibold text-gray-500 uppercase tracking-wider">Education</h3>
            <div class="mt-2 space-y-1">
                <a href="{{ path('app_student_index') }}" 
                   onclick="toggleMobileMenu()"
                   class="group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors {{ app.request.attributes.get('_route') starts with 'app_student' ? 'bg-primary-100 text-primary-700' : 'text-gray-700 hover:bg-gray-50 hover:text-gray-900' }}">
                    <svg class="mr-3 h-5 w-5 {{ app.request.attributes.get('_route') starts with 'app_student' ? 'text-primary-500' : 'text-gray-400 group-hover:text-gray-500' }}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z"></path>
                    </svg>
                    Élèves
                </a>

                <a href="{{ path('app_family_index') }}" 
                   onclick="toggleMobileMenu()"
                   class="group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors {{ app.request.attributes.get('_route') starts with 'app_family' ? 'bg-primary-100 text-primary-700' : 'text-gray-700 hover:bg-gray-50 hover:text-gray-900' }}">
                    <svg class="mr-3 h-5 w-5 {{ app.request.attributes.get('_route') starts with 'app_family' ? 'text-primary-500' : 'text-gray-400 group-hover:text-gray-500' }}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                    Familles
                </a>

                <a href="{{ path('app_class_school_index') }}" 
                   onclick="toggleMobileMenu()"
                   class="group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors {{ app.request.attributes.get('_route') starts with 'app_class' ? 'bg-primary-100 text-primary-700' : 'text-gray-700 hover:bg-gray-50 hover:text-gray-900' }}">
                    <svg class="mr-3 h-5 w-5 {{ app.request.attributes.get('_route') starts with 'app_class' ? 'text-primary-500' : 'text-gray-400 group-hover:text-gray-500' }}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                    Classes
                </a>

                <a href="{{ path('app_teacher_index') }}" 
                   onclick="toggleMobileMenu()"
                   class="group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors {{ app.request.attributes.get('_route') starts with 'app_teacher' ? 'bg-primary-100 text-primary-700' : 'text-gray-700 hover:bg-gray-50 hover:text-gray-900' }}">
                    <svg class="mr-3 h-5 w-5 {{ app.request.attributes.get('_route') starts with 'app_teacher' ? 'text-primary-500' : 'text-gray-400 group-hover:text-gray-500' }}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                    Enseignants
                </a>
            </div>
        </div>

        <!-- Finance Section -->
        <div class="mt-6">
            <h3 class="px-3 text-xs font-semibold text-gray-500 uppercase tracking-wider">Finance</h3>
            <div class="mt-2 space-y-1">
                <a href="{{ path('app_operation_index') }}" 
                   onclick="toggleMobileMenu()"
                   class="group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors {{ app.request.attributes.get('_route') starts with 'app_operation' ? 'bg-primary-100 text-primary-700' : 'text-gray-700 hover:bg-gray-50 hover:text-gray-900' }}">
                    <svg class="mr-3 h-5 w-5 {{ app.request.attributes.get('_route') starts with 'app_operation' ? 'text-primary-500' : 'text-gray-400 group-hover:text-gray-500' }}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    Opérations
                </a>

                <a href="{{ path('app_package_index') }}" 
                   onclick="toggleMobileMenu()"
                   class="group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors {{ app.request.attributes.get('_route') starts with 'app_package' ? 'bg-primary-100 text-primary-700' : 'text-gray-700 hover:bg-gray-50 hover:text-gray-900' }}">
                    <svg class="mr-3 h-5 w-5 {{ app.request.attributes.get('_route') starts with 'app_package' ? 'text-primary-500' : 'text-gray-400 group-hover:text-gray-500' }}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                    </svg>
                    Forfaits
                </a>

                <a href="{{ path('app_account_index') }}" 
                   onclick="toggleMobileMenu()"
                   class="group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors {{ app.request.attributes.get('_route') starts with 'app_account' ? 'bg-primary-100 text-primary-700' : 'text-gray-700 hover:bg-gray-50 hover:text-gray-900' }}">
                    <svg class="mr-3 h-5 w-5 {{ app.request.attributes.get('_route') starts with 'app_account' ? 'text-primary-500' : 'text-gray-400 group-hover:text-gray-500' }}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                    </svg>
                    Comptes
                </a>
            </div>
        </div>

        <!-- Administration Section -->
        <div class="mt-6">
            <h3 class="px-3 text-xs font-semibold text-gray-500 uppercase tracking-wider">Administration</h3>
            <div class="mt-2 space-y-1">
                <a href="{{ path('app_person_index') }}" 
                   onclick="toggleMobileMenu()"
                   class="group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors {{ app.request.attributes.get('_route') starts with 'app_person' ? 'bg-primary-100 text-primary-700' : 'text-gray-700 hover:bg-gray-50 hover:text-gray-900' }}">
                    <svg class="mr-3 h-5 w-5 {{ app.request.attributes.get('_route') starts with 'app_person' ? 'text-primary-500' : 'text-gray-400 group-hover:text-gray-500' }}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13.5 3a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z"></path>
                    </svg>
                    Utilisateurs
                </a>

                <a href="{{ path('app_document_new') }}" 
                   onclick="toggleMobileMenu()"
                   class="group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors {{ app.request.attributes.get('_route') starts with 'app_document' ? 'bg-primary-100 text-primary-700' : 'text-gray-700 hover:bg-gray-50 hover:text-gray-900' }}">
                    <svg class="mr-3 h-5 w-5 {{ app.request.attributes.get('_route') starts with 'app_document' ? 'text-primary-500' : 'text-gray-400 group-hover:text-gray-500' }}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                    Documents
                </a>

                <a href="{{ path('app_admin_dashboard_index') }}" 
                   onclick="toggleMobileMenu()"
                   class="group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors {{ app.request.attributes.get('_route') starts with 'app_admin' ? 'bg-primary-100 text-primary-700' : 'text-gray-700 hover:bg-gray-50 hover:text-gray-900' }}">
                    <svg class="mr-3 h-5 w-5 {{ app.request.attributes.get('_route') starts with 'app_admin' ? 'text-primary-500' : 'text-gray-400 group-hover:text-gray-500' }}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    Paramètres
                </a>
            </div>
        </div>
    </nav>

    <!-- Bottom section (mobile) -->
    <div class="px-4 py-4 border-t border-gray-200">
        <a href="{{ path('app_logout') }}" 
           onclick="toggleMobileMenu()"
           class="group flex items-center px-3 py-2 text-sm font-medium text-red-600 rounded-md hover:bg-red-50 hover:text-red-700 transition-colors">
            <svg class="mr-3 h-5 w-5 text-red-500 group-hover:text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
            </svg>
            Déconnexion
        </a>
    </div>
</div>