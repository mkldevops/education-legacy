{% extends 'PaymentPackageStudent/common.html.twig' %}

{% set title = 'PaymentPackageStudent list'|trans %}

{% block content %}
<div class="panel panel-default">
    {% include 'search.html.twig' %}

    <table class="table table-striped table-hover table-responsive">
        <thead>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <th>{% trans %}Comment{% endtrans %}</th>
                <th>{% trans %}Record{% endtrans %}</th>
                <th>{% trans %}Status{% endtrans %}</th>
                <th><span class="fa fa-edit" title="{% trans %}Edit{% endtrans %}"></span></th>
                <th><span class="fa fa-trash" title="{% trans %}Delete{% endtrans %}"></span></th>
            </tr>
        </thead>
        <tbody>
            {% for paymentpackagestudent in paymentpackagestudentList %}
            <tr>
                <td><a href="{{ path('payment_package_student_show', { 'id': paymentpackagestudent.id }) }}">{{ paymentpackagestudent.id }}</a></td>
                <td><a href="{{ path('payment_package_student_show', { 'id': paymentpackagestudent.id }) }}">{{ paymentpackagestudent.comment }}</a></td>
                <td>{% if paymentpackagestudent.record %}{{ paymentpackagestudent.record|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td><a href="{{ path('payment_package_student_show', { 'id': paymentpackagestudent.id }) }}">{{ paymentpackagestudent.status }}</a></td>
                <td>
                    <a href="{{ path('payment_package_student_edit', {'id': paymentpackagestudent.id}) }}" title="{% trans %}Edit{% endtrans %}">
                        <span class="fa fa-edit"></span>
                    </a>
                </td>
                <td>
                    <a href="{{ path('payment_package_student_delete', {'id': paymentpackagestudent.id}) }}" class="crud-entity-delete" title="{% trans %}Delete{% endtrans %}" data-entity="PaymentPackageStudent" data-id="{{ paymentpackagestudent.id }}">
                        <span class="fa fa-trash"></span>
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    {% if pages > 1 %}
    <div class="panel-footer">
        {% include 'pagination.html.twig' with {
            currentFilters: { 'search': search },
            currentPage: page,
            paginationPath: "payment_package_student",
            lastPage: pages,
            showAlwaysFirstAndLast: true
        } only %}
    </div>
    {% endif %}
</div>

{% endblock %}

