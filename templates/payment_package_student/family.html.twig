<button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#payment-package-family"><i class="fas fa-user-plus"></i> {{ 'Payer'|trans }}</button>
<!-- Modal -->
<div class="modal fade" id="payment-package-family" tabindex="-1" role="dialog" aria-labelledby="payment-package-title" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="payment-package-title">Paiement pour la famille {{ family }}</h4>
            </div>
            <div class="modal-body modal-form">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
                {#{% include "form.html.twig" %}#}
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->