{% extends '_inspina/layout.html.twig' %}

{% set title = 'Tailwind CSS Playground' %}
{% set page_header_title = 'Tailwind CSS Playground' %}

{% block stylesheets %}
    {{ parent() }}
    
    {# Tailwind CDN with opt-in toggle via query parameter ?tw=1 #}
    {% if app.request.query.get('tw') %}
        <script>
            // Configure Tailwind to avoid conflicts with existing styles
            tailwind.config = {
                // Disable preflight to prevent base style overrides
                corePlugins: { 
                    preflight: false 
                },
                theme: {
                    extend: {
                        colors: {
                            brand: '#0ea5e9',
                            inspina: '#1ab394'
                        }
                    }
                }
            }
        </script>
        <script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>
        
        {# Custom styles for playground demo #}
        <style>
            .tw-demo-section {
                margin: 2rem 0;
                padding: 1.5rem;
                border: 1px solid #e5e7eb;
                border-radius: 0.5rem;
                background: #f9fafb;
            }
            .tw-demo-title {
                font-size: 1.25rem;
                font-weight: 600;
                margin-bottom: 1rem;
                color: #374151;
            }
        </style>
    {% endif %}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Tailwind CSS Integration Test</h5>
                    <div class="ibox-tools">
                        {% if app.request.query.get('tw') %}
                            <span class="label label-success">Tailwind: ON</span>
                            <a href="{{ path('app_playground_tailwind') }}" class="btn btn-xs btn-warning">Turn OFF</a>
                        {% else %}
                            <span class="label label-danger">Tailwind: OFF</span>
                            <a href="{{ path('app_playground_tailwind') }}?tw=1" class="btn btn-xs btn-primary">Turn ON</a>
                        {% endif %}
                    </div>
                </div>
                <div class="ibox-content">
                    {% if app.request.query.get('tw') %}
                        {# Tailwind Components Gallery #}
                        <div class="tw-demo-section">
                            <h3 class="tw-demo-title">üé® Buttons</h3>
                            <div class="space-y-2">
                                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                                    Primary Button
                                </button>
                                <button class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
                                    Success Button
                                </button>
                                <button class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
                                    Danger Button
                                </button>
                                <button class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded">
                                    Secondary Button
                                </button>
                            </div>
                        </div>

                        <div class="tw-demo-section">
                            <h3 class="tw-demo-title">üìù Forms</h3>
                            <form class="space-y-4 max-w-md">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700">Email</label>
                                    <input type="email" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" placeholder="your@email.com">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700">Message</label>
                                    <textarea rows="3" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"></textarea>
                                </div>
                                <div>
                                    <label class="flex items-center">
                                        <input type="checkbox" class="form-checkbox h-4 w-4 text-indigo-600">
                                        <span class="ml-2 text-sm text-gray-700">I agree to the terms</span>
                                    </label>
                                </div>
                            </form>
                        </div>

                        <div class="tw-demo-section">
                            <h3 class="tw-demo-title">üìä Table</h3>
                            <div class="overflow-x-auto">
                                <table class="min-w-full bg-white border border-gray-200 rounded-lg">
                                    <thead class="bg-gray-50">
                                        <tr>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Role</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody class="divide-y divide-gray-200">
                                        <tr>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">John Doe</td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">Student</td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Active</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">Jane Smith</td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">Teacher</td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">Pending</span>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="tw-demo-section">
                            <h3 class="tw-demo-title">üö® Alerts</h3>
                            <div class="space-y-3">
                                <div class="bg-blue-100 border border-blue-400 text-blue-700 px-4 py-3 rounded" role="alert">
                                    <strong class="font-bold">Info:</strong>
                                    <span class="block sm:inline">This is an informational alert with Tailwind styling.</span>
                                </div>
                                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded" role="alert">
                                    <strong class="font-bold">Success:</strong>
                                    <span class="block sm:inline">Your action was completed successfully!</span>
                                </div>
                                <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded" role="alert">
                                    <strong class="font-bold">Warning:</strong>
                                    <span class="block sm:inline">Please review your input before proceeding.</span>
                                </div>
                                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded" role="alert">
                                    <strong class="font-bold">Error:</strong>
                                    <span class="block sm:inline">Something went wrong. Please try again.</span>
                                </div>
                            </div>
                        </div>

                        <div class="tw-demo-section">
                            <h3 class="tw-demo-title">üí≥ Cards</h3>
                            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                                    <div class="h-48 bg-gradient-to-r from-blue-500 to-purple-600"></div>
                                    <div class="p-6">
                                        <h4 class="text-xl font-semibold text-gray-800 mb-2">Card Title</h4>
                                        <p class="text-gray-600 mb-4">This is a sample card component using Tailwind CSS utilities.</p>
                                        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                                            Learn More
                                        </button>
                                    </div>
                                </div>
                                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                                    <div class="h-48 bg-gradient-to-r from-green-500 to-teal-600"></div>
                                    <div class="p-6">
                                        <h4 class="text-xl font-semibold text-gray-800 mb-2">Another Card</h4>
                                        <p class="text-gray-600 mb-4">Demonstrating responsive grid layout with Tailwind.</p>
                                        <button class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
                                            Get Started
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="tw-demo-section">
                            <h3 class="tw-demo-title">üì± Responsive Utilities</h3>
                            <div class="bg-white p-4 rounded-lg border">
                                <div class="text-sm sm:text-base md:text-lg lg:text-xl xl:text-2xl">
                                    This text scales with breakpoints: 
                                    <span class="text-blue-600 font-semibold">
                                        sm ‚Üí md ‚Üí lg ‚Üí xl ‚Üí 2xl
                                    </span>
                                </div>
                                <div class="mt-4 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-2">
                                    <div class="bg-red-200 p-2 text-center rounded">1</div>
                                    <div class="bg-green-200 p-2 text-center rounded">2</div>
                                    <div class="bg-blue-200 p-2 text-center rounded">3</div>
                                    <div class="bg-yellow-200 p-2 text-center rounded">4</div>
                                </div>
                            </div>
                        </div>

                        <div class="tw-demo-section">
                            <h3 class="tw-demo-title">üîß Integration Status</h3>
                            <div class="bg-green-50 border border-green-200 rounded-lg p-4">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0">
                                        <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                        </svg>
                                    </div>
                                    <div class="ml-3">
                                        <h3 class="text-sm font-medium text-green-800">Tailwind CSS Loaded Successfully</h3>
                                        <div class="mt-2 text-sm text-green-700">
                                            <ul class="list-disc list-inside space-y-1">
                                                <li>CDN version loaded via query parameter toggle</li>
                                                <li>Preflight disabled to avoid conflicts with Inspina theme</li>
                                                <li>Forms and typography plugins enabled</li>
                                                <li>Custom brand colors configured</li>
                                                <li>All components rendering correctly</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    {% else %}
                        {# Default content when Tailwind is OFF #}
                        <div class="text-center">
                            <h3>üöÄ Tailwind CSS Migration Playground</h3>
                            <p class="lead">This playground allows you to test Tailwind CSS integration without affecting the main application.</p>
                            
                            <div class="m-t-lg">
                                <div class="alert alert-info">
                                    <strong>Current Status:</strong> Tailwind CSS is <strong>disabled</strong>. 
                                    The existing Inspina theme is fully preserved.
                                </div>
                                
                                <div class="alert alert-warning">
                                    <strong>How to test:</strong> Click the "Turn ON" button above or add <code>?tw=1</code> to the URL to load Tailwind CSS via CDN.
                                </div>

                                <h4>Features to test when enabled:</h4>
                                <ul class="text-left" style="max-width: 500px; margin: 0 auto;">
                                    <li>‚úÖ Utility-first CSS classes</li>
                                    <li>‚úÖ Responsive design utilities</li>
                                    <li>‚úÖ Modern component examples</li>
                                    <li>‚úÖ Form styling with plugins</li>
                                    <li>‚úÖ No conflicts with existing theme</li>
                                    <li>‚úÖ Typography plugin integration</li>
                                </ul>

                                <div class="m-t-lg">
                                    <a href="{{ path('app_playground_tailwind') }}?tw=1" class="btn btn-primary btn-lg">
                                        <i class="fa fa-magic"></i> Enable Tailwind CSS
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}