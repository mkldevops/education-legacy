{% set resources = resources|merge({ highchart : true }) %}

{% extends "admin/common.html.twig" %}

{% trans_default_domain 'admin' %}

{% set title = 'dashboard.breadcrumb'|trans({}, 'common') %}

{% block javascripts %}
    {{ parent() }}
    <!-- Modern chart libraries can be added here if needed -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
{% endblock %}

{% block body %}
    <!-- Enhanced Dashboard Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
        <!-- Enhanced Student Panel -->
        <div class="group">
            <a href="{{ path('app_student_index') }}" class="block">
                <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 p-6 text-white hover:scale-105 hover:-translate-y-1">
                    <div class="flex items-center justify-between">
                        <div class="flex-shrink-0">
                            <div class="flex items-center justify-center w-16 h-16 bg-white/20 rounded-xl backdrop-blur-sm">
                                {{ ux_icon('bi:person-fill', {class: 'w-8 h-8 text-white'}) }}
                            </div>
                        </div>
                        <div class="flex-1 min-w-0 ml-4">
                            <div class="text-right">
                                <p class="text-sm font-medium text-blue-100 uppercase tracking-wide">{% trans %}panel.title.student{% endtrans %}</p>
                                <p class="text-3xl font-bold text-white mt-1">{{ data.student.nbActive }}</p>
                                <div class="flex items-center justify-end mt-2">
                                    {{ ux_icon('bi:graph-up', {class: 'w-4 h-4 text-blue-200 mr-1'}) }}
                                    <span class="text-xs text-blue-200">Étudiants actifs</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4 pt-4 border-t border-white/20">
                        <div class="flex items-center justify-between text-sm">
                            <span class="text-blue-100">Total: {{ data.student.nbTotal }}</span>
                            <div class="flex items-center text-blue-200 group-hover:text-white transition-colors duration-200">
                                <span class="mr-1">Voir plus</span>
                                {{ ux_icon('bi:chevron-right', {class: 'w-4 h-4 group-hover:translate-x-1 transition-transform duration-200'}) }}
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <!-- Enhanced Account Panel -->
        {% if is_granted('ROLE_ACCOUNTANT') %}
            <div class="group">
                <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 p-6 text-white hover:scale-105 hover:-translate-y-1">
                    <div class="flex items-center justify-between">
                        <div class="flex-shrink-0">
                            <div class="flex items-center justify-center w-16 h-16 bg-white/20 rounded-xl backdrop-blur-sm">
                                {{ ux_icon('bi:currency-euro', {class: 'w-8 h-8 text-white'}) }}
                            </div>
                        </div>
                        <div class="flex-1 min-w-0 ml-4">
                            <div class="text-right">
                                <p class="text-sm font-medium text-green-100 uppercase tracking-wide">{% trans %}account.total_sum{% endtrans %}</p>
                                <p class="text-3xl font-bold text-white mt-1">{{ data.account.total.amount |round(2, 'floor') }}&nbsp;€</p>
                                <div class="flex items-center justify-end mt-2">
                                    {{ ux_icon('bi:graph-up-arrow', {class: 'w-4 h-4 text-green-200 mr-1'}) }}
                                    <span class="text-xs text-green-200">Solde total</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4 pt-4 border-t border-white/20">
                        <div class="flex items-center justify-between text-sm">
                            <span class="text-green-100">Crédit: {{ data.account.total.amountCredit|round(2, 'floor') }}€</span>
                            <span class="text-green-200">Débit: {{ data.account.total.amountDebit|round(2, 'floor') }}€</span>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}

        <!-- Additional Stats Card -->
        <div class="group">
            <div class="bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 p-6 text-white hover:scale-105 hover:-translate-y-1">
                <div class="flex items-center justify-between">
                    <div class="flex-shrink-0">
                        <div class="flex items-center justify-center w-16 h-16 bg-white/20 rounded-xl backdrop-blur-sm">
                            {{ ux_icon('bi:bar-chart', {class: 'w-8 h-8 text-white'}) }}
                        </div>
                    </div>
                    <div class="flex-1 min-w-0 ml-4">
                        <div class="text-right">
                            <p class="text-sm font-medium text-purple-100 uppercase tracking-wide">Statistiques</p>
                            <p class="text-3xl font-bold text-white mt-1">100%</p>
                            <div class="flex items-center justify-end mt-2">
                                {{ ux_icon('bi:check-circle', {class: 'w-4 h-4 text-purple-200 mr-1'}) }}
                                <span class="text-xs text-purple-200">Système opérationnel</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Enhanced Dashboard Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Enhanced Accounts Details Card -->
        {% if is_granted('ROLE_ACCOUNTANT') %}
            <div class="lg:col-span-1">
                <div class="bg-white rounded-2xl shadow-lg border border-gray-200 overflow-hidden hover:shadow-xl transition-all duration-300">
                    <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-4 border-b border-gray-200">
                        <div class="flex items-center">
                            <div class="flex items-center justify-center w-8 h-8 bg-blue-100 rounded-lg mr-3">
                                {{ ux_icon('bi:credit-card', {class: 'w-4 h-4 text-blue-600'}) }}
                            </div>
                            <h3 class="text-lg font-bold text-gray-900">{% trans %}panel.title.account{% endtrans %}</h3>
                        </div>
                    </div>
                    <div class="p-6">
                        <div class="space-y-4">
                            {% for account in data.account %}
                                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-xl hover:bg-gray-100 transition-colors duration-200">
                                    <div class="flex items-center">
                                        <div class="flex items-center justify-center w-6 h-6 bg-green-100 rounded-lg mr-3">
                                            {{ ux_icon('bi:currency-euro', {class: 'w-3 h-3 text-green-600'}) }}
                                        </div>
                                        <span class="text-sm font-medium text-gray-700">{{ account.name|default('total') }}</span>
                                    </div>
                                    <span class="text-sm font-bold text-gray-900">{{ account.amount|round(2, 'floor') }}&nbsp;€</span>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}

        <!-- Enhanced Recent Operations Card -->
        {% if data.lastOperations is not empty and is_granted('ROLE_ACCOUNTANT') %}
            <div class="lg:col-span-2">
                <div class="bg-white rounded-2xl shadow-lg border border-gray-200 overflow-hidden hover:shadow-xl transition-all duration-300">
                    <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-4 border-b border-gray-200">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center">
                                <div class="flex items-center justify-center w-8 h-8 bg-green-100 rounded-lg mr-3">
                                    {{ ux_icon('bi:clipboard-data', {class: 'w-4 h-4 text-green-600'}) }}
                                </div>
                                <h3 class="text-lg font-bold text-gray-900">{% trans %}panel.title.last_operation{% endtrans %}</h3>
                            </div>
                            <div class="flex items-center space-x-2">
                                <a href="{{ path('app_account_slip_new') }}" class="inline-flex items-center px-3 py-1.5 text-xs font-semibold text-blue-700 bg-blue-50 hover:bg-blue-100 border border-blue-200 rounded-lg transition-all duration-200">
                                    {{ ux_icon('bi:arrow-left-right', {class: 'w-3 h-3 mr-1'}) }}
                                    Transfert
                                </a>
                                <a href="{{ path('app_operation_new') }}" class="inline-flex items-center px-3 py-1.5 text-xs font-semibold text-green-700 bg-green-50 hover:bg-green-100 border border-green-200 rounded-lg transition-all duration-200">
                                    {{ ux_icon('bi:plus-circle', {class: 'w-3 h-3 mr-1'}) }}
                                    Opération
                                </a>
                                <a href="{{ path('app_operation_index') }}" class="inline-flex items-center px-3 py-1.5 text-xs font-semibold text-purple-700 bg-purple-50 hover:bg-purple-100 border border-purple-200 rounded-lg transition-all duration-200">
                                    {{ ux_icon('bi:list', {class: 'w-3 h-3 mr-1'}) }}
                                    {% trans %}panel.title.btn_list_operations{% endtrans %}
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="overflow-hidden">
                        <div class="overflow-x-auto">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead class="bg-gray-50">
                                    <tr>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Opération</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Montant</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200">
                                    {% for operation in data.lastOperations %}
                                        <tr class="hover:bg-gray-50 transition-colors duration-200">
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <div class="flex items-center">
                                                    <div class="flex items-center justify-center w-6 h-6 bg-gray-100 rounded-lg mr-2">
                                                        {{ ux_icon('bi:calendar', {class: 'w-3 h-3 text-gray-600'}) }}
                                                    </div>
                                                    {% if operation.date is not null %}
                                                        <span class="text-sm font-medium text-gray-900">{{ operation.date.format('d/m/y') }}</span>
                                                    {% else %}
                                                        <span class="text-sm font-medium text-gray-500">{{ operation.datePlanned.format('d/m/y') }}</span>
                                                    {% endif %}
                                                </div>
                                            </td>
                                            <td class="px-6 py-4">
                                                <a href="{{ path('app_operation_show', {id : operation.id}) }}" class="text-sm font-medium text-blue-600 hover:text-blue-800 transition-colors duration-200 hover:underline">
                                                    {{ operation.name|length > 50 ? operation.name[:50] ~ '...' : operation.name }}
                                                </a>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <span class="inline-flex items-center px-2.5 py-1 rounded-lg text-xs font-medium bg-gray-100 text-gray-800">
                                                    {{ operation.typeOperation }}
                                                </span>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-right">
                                                <div class="flex items-center justify-end">
                                                    {% if operation.amount > 0 %}
                                                        {{ ux_icon('bi:plus-circle', {class: 'w-4 h-4 text-green-500 mr-1'}) }}
                                                        <span class="text-sm font-bold text-green-600">+{{ operation.amount|round(2, 'floor') }}&nbsp;€</span>
                                                    {% else %}
                                                        {{ ux_icon('bi:dash-circle', {class: 'w-4 h-4 text-red-500 mr-1'}) }}
                                                        <span class="text-sm font-bold text-red-600">{{ operation.amount|round(2, 'floor') }}&nbsp;€</span>
                                                    {% endif %}
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}

    </div>
{% endblock %}
