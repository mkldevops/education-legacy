{% extends 'student/common.html.twig' %}

{% trans_default_domain 'student' %}

{% set title = 'title.new'|trans %}

{% block errors %}
    {% if form.vars.errors|length > 0 %}
        <div class="mb-6 bg-red-50 border border-red-200 rounded-md p-4">
            <div class="flex">
                <div class="flex-shrink-0">
                    {{ ux_icon('bi:exclamation-triangle-fill', {class: 'w-5 h-5 text-red-400'}) }}
                </div>
                <div class="ml-3">
                    <h3 class="text-sm font-medium text-red-800">
                        Erreurs dans le formulaire
                    </h3>
                    <div class="mt-2 text-sm text-red-700">
                        {{ form_errors(form) }}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock errors %}

{% set breadcrumbs = { ('' ~ title) : path('app_student_new')}|merge(breadcrumbs|default({})) %}

{% block body %}
    <div class="bg-white shadow-sm rounded-lg border border-gray-200 overflow-hidden">
        {# Header #}
        <div class="px-6 py-4 border-b border-gray-200 bg-gradient-to-r from-primary-50 to-primary-100">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-primary-500 rounded-lg flex items-center justify-center">
                        {{ ux_icon('bi:person-plus', {class: 'w-5 h-5 text-white'}) }}
                    </div>
                </div>
                <div class="ml-4">
                    <h1 class="text-xl font-semibold text-gray-900">
                        {{ 'title.form.new'|trans }}
                    </h1>
                    <p class="text-sm text-gray-600">
                        Créer un nouveau profil étudiant avec toutes les informations nécessaires
                    </p>
                </div>
            </div>
        </div>

        {# Form Content #}
        <div class="p-6">
            {% include 'student/includes/form.html.twig' %}
        </div>
    </div>
{% endblock %}
