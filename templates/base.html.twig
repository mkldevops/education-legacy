{% set version = constant('Symfony\\Component\\HttpKernel\\Kernel::MAJOR_VERSION') ~ '.' ~ constant('Symfony\\Component\\HttpKernel\\Kernel::MINOR_VERSION') %}

<!DOCTYPE html>
<html lang="{{ app.request.locale }}" class="h-full bg-gray-50">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="robots" content="noindex, nofollow">
        <link rel="shortcut icon" href="{{ asset('img/logo-custom.png') }}" type="image/x-icon" />
        
        <title>{% block title %}Education Management System{% endblock %}</title>

        {# PWA (injected by Spomky-Labs/PWA Bundle) #}
        {{ pwa() }}

        {% block metas %}{% endblock %}

        {% block stylesheets %}
            {# Tailwind CSS via CDN (for production, use build pipeline) #}
            <script>
                tailwind.config = {
                    theme: {
                        extend: {
                            colors: {
                                primary: {
                                    50: '#eff6ff',
                                    100: '#dbeafe', 
                                    200: '#bfdbfe',
                                    300: '#93c5fd',
                                    400: '#60a5fa',
                                    500: '#3b82f6',
                                    600: '#2563eb',
                                    700: '#1d4ed8',
                                    800: '#1e40af',
                                    900: '#1e3a8a',
                                },
                                success: {
                                    50: '#ecfdf5',
                                    100: '#d1fae5',
                                    200: '#a7f3d0',
                                    300: '#6ee7b7',
                                    400: '#34d399',
                                    500: '#10b981',
                                    600: '#059669',
                                    700: '#047857',
                                    800: '#065f46',
                                    900: '#064e3b',
                                },
                                warning: {
                                    50: '#fffbeb',
                                    100: '#fef3c7',
                                    200: '#fde68a',
                                    300: '#fcd34d',
                                    400: '#fbbf24',
                                    500: '#f59e0b',
                                    600: '#d97706',
                                    700: '#b45309',
                                    800: '#92400e',
                                    900: '#78350f',
                                },
                                danger: {
                                    50: '#fef2f2',
                                    100: '#fee2e2',
                                    200: '#fecaca',
                                    300: '#fca5a5',
                                    400: '#f87171',
                                    500: '#ef4444',
                                    600: '#dc2626',
                                    700: '#b91c1c',
                                    800: '#991b1b',
                                    900: '#7f1d1d',
                                }
                            },
                            fontFamily: {
                                'sans': ['Inter', 'system-ui', 'sans-serif'],
                            }
                        }
                    }
                }
            </script>
            <script src="https://cdn.tailwindcss.com?plugins=forms,typography,aspect-ratio"></script>
            
            {# Inter Font for better typography #}
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
            
            {# Heroicons for consistent iconography #}
            <script src="https://unpkg.com/@heroicons/react@2.0.18/24/outline/index.js" type="module"></script>
            
            {# Custom styles for specific resources #}
            {% if resources is defined and resources.datatables %}
                <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.6/css/dataTables.tailwindcss.min.css" />
            {% endif %}

            {% if resources is defined and resources.uploadfile %}
                <style>
                    .upload-area {
                        border: 2px dashed #d1d5db;
                        border-radius: 0.5rem;
                        padding: 1.5rem;
                        text-align: center;
                        transition: border-color 0.2s;
                    }
                    .upload-area:hover {
                        border-color: #60a5fa;
                    }
                </style>
            {% endif %}

            {% if resources is defined and resources.operations %}
                <style>
                    .operation-valid {
                        background-color: #ecfdf5;
                        border-color: #a7f3d0;
                        color: #065f46;
                    }
                    .operation-invalid {
                        background-color: #fef2f2;
                        border-color: #fecaca;
                        color: #7f1d1d;
                    }
                    .operation-pending {
                        background-color: #fffbeb;
                        border-color: #fde68a;
                        color: #78350f;
                    }
                </style>
            {% endif %}

            <style>
                /* Custom scrollbar */
                ::-webkit-scrollbar { width: 6px; }
                ::-webkit-scrollbar-track { background-color: #f3f4f6; }
                ::-webkit-scrollbar-thumb { 
                    background-color: #9ca3af; 
                    border-radius: 9999px; 
                }
                ::-webkit-scrollbar-thumb:hover { background-color: #6b7280; }
                
                /* Loading states */
                .loading { animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite; }
                
                /* Focus states */
                .focus-ring { 
                    outline: 2px solid transparent;
                    outline-offset: 2px;
                }
                .focus-ring:focus {
                    outline: none;
                    box-shadow: 0 0 0 2px #3b82f6, 0 0 0 4px rgba(59, 130, 246, 0.5);
                }
                
                /* Pulse animation */
                @keyframes pulse {
                    0%, 100% { opacity: 1; }
                    50% { opacity: 0.5; }
                }
            </style>
        {% endblock %}

        {% block optionals %}{% endblock %}
    </head>

    <body class="h-full font-sans antialiased bg-gray-50">
        <div id="app" class="min-h-full">
            {% block container %}
                <!-- Mobile menu backdrop -->
                <div id="mobile-menu-backdrop" class="fixed inset-0 bg-gray-600 bg-opacity-75 z-40 hidden lg:hidden" onclick="toggleMobileMenu()"></div>

                <!-- Mobile menu -->
                <div id="mobile-menu" class="fixed inset-y-0 left-0 z-50 w-64 bg-white shadow-xl transform -translate-x-full transition-transform duration-300 lg:hidden">
                    {% block mobile_sidebar %}
                        {% include '_tailwind/mobile-sidebar.html.twig' %}
                    {% endblock %}
                </div>

                <!-- Desktop sidebar -->
                <div class="hidden lg:fixed lg:inset-y-0 lg:left-0 lg:z-50 lg:block lg:w-64 lg:overflow-y-auto lg:bg-white lg:shadow-lg">
                    {% block desktop_sidebar %}
                        {% include '_tailwind/sidebar.html.twig' %}
                    {% endblock %}
                </div>

                <!-- Main content area -->
                <div class="lg:pl-64">
                    <!-- Top navigation bar -->
                    <div class="sticky top-0 z-40 bg-white shadow-sm border-b border-gray-200">
                        {% block header %}
                            {% include '_tailwind/header.html.twig' %}
                        {% endblock %}
                    </div>

                    <!-- Enhanced Page Header -->
                    {% block page_header %}
                        {% if breadcrumbs is defined or title is defined %}
                            <div class="bg-gradient-to-r from-white to-gray-50 shadow-sm border-b border-gray-200">
                                <div class="px-4 py-6 sm:px-6 lg:px-8">
                                    {% if breadcrumbs is defined %}
                                        <nav class="flex mb-4" aria-label="Breadcrumb">
                                            <ol class="flex items-center space-x-1">
                                                {% for name, path_name in breadcrumbs %}
                                                    <li class="flex items-center">
                                                        {% if not loop.first %}
                                                            <div class="flex items-center justify-center w-6 h-6 mx-2">
                                                                <svg class="w-3 h-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                                                </svg>
                                                            </div>
                                                        {% endif %}
                                                        {% if loop.last %}
                                                            <span class="inline-flex items-center px-3 py-1.5 text-sm font-semibold text-primary-700 bg-gradient-to-r from-primary-50 to-primary-100 rounded-lg border border-primary-200 shadow-sm">
                                                                <svg class="w-4 h-4 mr-2 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4"></path>
                                                                </svg>
                                                                {{ name|capitalize }}
                                                            </span>
                                                        {% else %}
                                                            <a href="{{ path_name }}" class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-gray-600 hover:text-gray-800 bg-white hover:bg-gradient-to-r hover:from-gray-50 hover:to-gray-100 rounded-lg border border-gray-200 hover:border-gray-300 shadow-sm hover:shadow-md transition-all duration-200 group">
                                                                <svg class="w-3 h-3 mr-2 text-gray-400 group-hover:text-gray-600 transition-colors duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                                                                </svg>
                                                                {{ name|capitalize }}
                                                            </a>
                                                        {% endif %}
                                                    </li>
                                                {% endfor %}
                                            </ol>
                                        </nav>
                                    {% endif %}
                                    
                                    {% if title is defined %}
                                        <div class="flex items-center">
                                            <div class="flex items-center justify-center w-10 h-10 rounded-xl bg-gradient-to-br from-primary-500 to-primary-600 shadow-lg mr-4">
                                                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                                </svg>
                                            </div>
                                            <div>
                                                <h1 class="text-2xl font-bold text-gray-900 tracking-tight">{{ title }}</h1>
                                                <p class="text-sm text-gray-600 mt-1">Gérez et organisez vos données efficacement</p>
                                            </div>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        {% endif %}
                    {% endblock %}

                    <!-- Flash messages -->
                    <div class="px-4 py-2 sm:px-6 lg:px-8">
                        {% include "_tailwind/flashbag.html.twig" %}
                    </div>

                    <!-- Main content -->
                    <main class="px-4 py-6 sm:px-6 lg:px-8">
                        {% block body %}
                            <div class="text-center py-16">
                                <div class="mx-auto max-w-md">
                                    <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                                    </svg>
                                    <h3 class="mt-4 text-lg font-medium text-gray-900">Contenu par défaut</h3>
                                    <p class="mt-2 text-sm text-gray-500">Cette page n'a pas de contenu spécifique défini.</p>
                                    <div class="mt-6">
                                        <a href="{{ path('app_admin_home') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors">
                                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                                            </svg>
                                            Tableau de bord
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endblock %}
                    </main>

                    <!-- Footer -->
                    {% block footer %}
                        <footer class="bg-white border-t border-gray-200 mt-8">
                            <div class="px-4 py-4 sm:px-6 lg:px-8">
                                <p class="text-sm text-gray-500 text-center">
                                    © {{ "now"|date("Y") }} Education Management System. 
                                    Powered by Symfony {{ version }} & Tailwind CSS.
                                </p>
                            </div>
                        </footer>
                    {% endblock %}
                </div>
            {% endblock %}
        </div>

        {% block javascripts %}
            {# Core dependencies #}
            <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
            <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>

            {# Sentry for error tracking #}
            <script src="https://js.sentry-cdn.com/f1037c7551f541a3a3b9cdd1a2200ba5.min.js" crossorigin="anonymous"></script>

            {# Modern JavaScript utilities #}
            <script src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js" defer></script>

            {# DateTime handling #}
            <script src="https://cdn.jsdelivr.net/npm/dayjs@1.11.7/dayjs.min.js"></script>

            {# DataTables for Tailwind #}
            {% if resources is defined and resources.datatables %}
                <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
                <script src="https://cdn.datatables.net/1.13.6/js/dataTables.tailwindcss.min.js"></script>
                <script>
                    // Configure DataTables defaults for Tailwind
                    $.extend(true, $.fn.dataTable.defaults, {
                        dom: '<"flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4"<"flex-1"f><"mt-2 sm:mt-0"l>><"overflow-x-auto"t><"flex flex-col sm:flex-row sm:items-center sm:justify-between mt-4"<"flex-1 text-sm text-gray-700"i><"mt-2 sm:mt-0"p>>',
                        language: {
                            search: "",
                            searchPlaceholder: "Rechercher...",
                            lengthMenu: "_MENU_ par page",
                            info: "Affichage de _START_ à _END_ sur _TOTAL_ entrées",
                            infoEmpty: "Aucune entrée",
                            infoFiltered: "(filtré de _MAX_ entrées totales)",
                            paginate: {
                                first: "Premier",
                                last: "Dernier", 
                                next: "Suivant",
                                previous: "Précédent"
                            }
                        }
                    });
                </script>
            {% endif %}

            {# File upload handling #}
            {% if resources is defined and resources.uploadfile %}
                <script src="https://unpkg.com/filepond@^4/dist/filepond.js"></script>
                <script src="{{ asset('js/document.js') }}"></script>
            {% endif %}

            {# Rich text editor #}
            {% if resources is defined and resources.ckeditor %}
                <script src="https://cdn.ckeditor.com/4.21.0/standard/ckeditor.js"></script>
                <script src="{{ asset('js/ckeditor.js') }}"></script>
            {% endif %}

            {# Custom application scripts #}
            <script src="{{ asset('js/base/base-bundle.js') }}"></script>
            <script src="{{ asset('js/base/base-config.js') }}"></script>
            <script src="{{ asset('js/base/base-functions.js') }}"></script>

            {% if resources is defined and resources.operations %}
                <script src="{{ asset('js/operation.js') }}"></script>
            {% endif %}

            {# Mobile menu toggle #}
            <script>
                function toggleMobileMenu() {
                    const menu = document.getElementById('mobile-menu');
                    const backdrop = document.getElementById('mobile-menu-backdrop');
                    
                    if (menu.classList.contains('-translate-x-full')) {
                        menu.classList.remove('-translate-x-full');
                        backdrop.classList.remove('hidden');
                        document.body.style.overflow = 'hidden';
                    } else {
                        menu.classList.add('-translate-x-full');
                        backdrop.classList.add('hidden');
                        document.body.style.overflow = '';
                    }
                }

                // Close mobile menu on window resize
                window.addEventListener('resize', function() {
                    if (window.innerWidth >= 1024) {
                        document.getElementById('mobile-menu').classList.add('-translate-x-full');
                        document.getElementById('mobile-menu-backdrop').classList.add('hidden');
                        document.body.style.overflow = '';
                    }
                });

                // Initialize tooltips and other UI components
                document.addEventListener('DOMContentLoaded', function() {
                    // Auto-hide flash messages
                    const flashMessages = document.querySelectorAll('[data-auto-hide]');
                    flashMessages.forEach(function(message) {
                        setTimeout(function() {
                            message.style.transition = 'opacity 0.5s';
                            message.style.opacity = '0';
                            setTimeout(function() {
                                message.remove();
                            }, 500);
                        }, 5000);
                    });
                });
            </script>
        {% endblock %}

        {% block importmap %}{{ importmap('app') }}{% endblock %}

        {# PWA Service Worker Registration #}
        <script type="module">
            import { Workbox } from 'workbox-window';

            if ('serviceWorker' in navigator) {
                const wb = new Workbox('/sw.js');
                wb.register();
            }
        </script>
    </body>
</html>