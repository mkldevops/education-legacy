{% extends 'OperationGender:common.html.twig' %}

{% trans_default_domain 'operationgender' %}

{% set title = 'title.index'|trans %}

{% block body %}
    <div class="panel panel-default">
        {% include 'search.html.twig' %}
    
        <table class="table table-striped table-hover table-responsive">
            <thead>
                <tr>
                    <th>{% trans %}Id{% endtrans %}</th>
                    <th>{% trans %}Name{% endtrans %}</th>
                    <th>{% trans %}Code{% endtrans %}</th>
                    <th>{% trans %}Created{% endtrans %}</th>
                    <th>{% trans %}Status{% endtrans %}</th>
                    <th><span class="fa fa-edit" title="{% trans %}Edit{% endtrans %}"></span></th>
                    <th><span class="fa fa-trash" title="{% trans %}Delete{% endtrans %}"></span></th>
                </tr>
            </thead>
            <tbody>
                {% for operationgender in operationgenderList %}
                <tr>
                    <td>
                        <a href="{{ path('app_operation-gender_show', { 'id': operationgender.id }) }}">{{ operationgender.id }}</a>
                    </td>
                    <td>
                        <a href="{{ path('app_operation-gender_show', { 'id': operationgender.id }) }}">{{ operationgender.name }}</a>
                    </td>
                    <td>
                        <a href="{{ path('app_operation-gender_show', { 'id': operationgender.id }) }}">{{ operationgender.code }}</a>
                    </td>
                    <td>{% if operationgender.created %}{{ operationgender.created|date('d/m/Y H:i:s') }}{% endif %}</td>
                    <td>
                        <a href="{{ path('app_operation-gender_show', { 'id': operationgender.id }) }}">{{ operationgender.status }}</a>
                    </td>
                    <td>
                        <a href="{{ path('app_operation-gender_edit', {'id': operationgender.id}) }}"
                           title="{% trans %}Edit{% endtrans %}">
                            <span class="fa fa-edit"></span>
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('app_operation-gender_delete', {'id': operationgender.id}) }}"
                           class="crud-entity-delete" title="{% trans %}Delete{% endtrans %}"
                           data-entity="OperationGender" data-id="{{ operationgender.id }}">
                            <span class="fa fa-trash"></span>
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    
        {% if pages > 1 %}
            <div class="panel-footer">
                {% include 'pagination.html.twig' with {
                    currentFilters: { 'search': search },
                    currentPage: page,
                    paginationPath: "app_operation-gender",
                    lastPage: pages,
                    showAlwaysFirstAndLast: true
                } only %}
            </div>
        {% endif %}
    </div>

{% endblock %}

