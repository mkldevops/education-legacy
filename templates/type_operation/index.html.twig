{% extends 'type_operation/common.html.twig' %}

{% trans_default_domain 'type_operation' %}

{% set title = 'title.index'|trans %}

{% block body %}
    <div class="panel panel-default">

        {% include 'search.html.twig' %}

        <table class="table table-striped table-hover table-responsive">
            <thead>
                <tr>
                    <th>{% trans %}Id{% endtrans %}</th>
                    <th>{% trans %}Name{% endtrans %}</th>
                    <th>{% trans %}Shortname{% endtrans %}</th>
                    <th>{% trans %}Code{% endtrans %}</th>
                    <th>{% trans %}Typeamount{% endtrans %}</th>
                    <th>{% trans %}Description{% endtrans %}</th>
                    <th>{% trans %}Status{% endtrans %}</th>
                    <th><span class="fa fa-edit" title="{% trans %}Edit{% endtrans %}"></span></th>
                </tr>
            </thead>
            <tbody>
                {% for typeoperation in typeoperationList %}
                <tr>
                    <td><a href="{{ path('app_type_operation_show', { 'id': typeoperation.id }) }}">{{ typeoperation.id }}</a></td>
                    <td><a href="{{ path('app_type_operation_show', { 'id': typeoperation.id }) }}">{{ typeoperation.name }}</a></td>
                    <td><a href="{{ path('app_type_operation_show', { 'id': typeoperation.id }) }}">{{ typeoperation.shortName }}</a></td>
                    <td><a href="{{ path('app_type_operation_show', { 'id': typeoperation.id }) }}">{{ typeoperation.code }}</a></td>
                    <td><a href="{{ path('app_type_operation_show', { 'id': typeoperation.id }) }}">{{ typeoperation.typeAmount }}</a></td>
                    <td><a href="{{ path('app_type_operation_show', { 'id': typeoperation.id }) }}">{{ typeoperation.description }}</a></td>
                    <td class="text-center">
                        <a href="{{ path('app_type_operation_show', { 'id': typeoperation.id }) }}"> <i class="fa fa-toggle-{{ typeoperation.status ? 'on' : 'off' }}"></i></a>
                    </td>
                    <td>
                        <a href="{{ path('app_type_operation_edit', {'id': typeoperation.id}) }}" title="{% trans %}Edit{% endtrans %}">
                            <span class="fa fa-edit"></span>
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        {% if pages > 1 %}
            <div class="panel-footer">
                {% include 'pagination.html.twig' with {
                    currentFilters: { 'search': search },
                    currentPage: page,
                    paginationPath: "app_type_operation_index",
                    lastPage: pages,
                    showAlwaysFirstAndLast: true
                } only %}
            </div>
        {% endif %}
    </div>

{% endblock %}

